<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/commentview_profile_imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="7.5dp"
            android:src="@drawable/ic_account"/>
        <TextView
            android:id="@+id/commentview_profile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserID"
            android:textStyle="bold"
            android:layout_margin="7.5dp"/>

        <TextView
            android:id="@+id/commentview_profile_textView_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="몇분전"
            android:textStyle="bold"
            android:layout_margin="7.5dp"/>

    </LinearLayout>



    <TextView
        android:id="@+id/commentview_comment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글내용"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"

        />


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/round_button_white"
       android:orientation="horizontal"
       >

       <ImageView
           android:src="@drawable/crown_g__"
           android:layout_width="15dp"
           android:layout_height="15dp"
           android:layout_margin="10dp"

           />

       <TextView
           android:text="공감"
           android:textSize="12dp"
           android:layout_marginTop="8dp"
           android:layout_marginRight="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>



   </LinearLayout>



</LinearLayout>





</LinearLayout>